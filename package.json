{
  "name": "@asafarim/changelog-timeline",
  "version": "0.2.2",
  "description": "Responsive, paginated vertical changelog timeline using ASafariM design tokens",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/changelog-timeline.css"
  },
  "files": [
    "dist",
    "README.md",
    "package.json",
    "changelog-demo/src/public/changelog-demo.png"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "pnpm build && pnpm --filter changelog-demo dev",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.9.1"
  },
  "keywords": [
    "changelog",
    "timeline",
    "react",
    "typescript",
    "asafarim"
  ],
  "author": "ASafariM",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}